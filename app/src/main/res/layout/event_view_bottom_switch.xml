<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true">
    <TextView
    android:id="@+id/event_view_attendance_switch_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
    android:layout_alignTop="@id/event_view_rsvp_label"
    android:textSize="@dimen/display_text_size"
    android:text="@string/attending_switch"/>
    <Switch
    android:id="@+id/event_view_attendance_switch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/event_view_attendance_switch_label"/>

</RelativeLayout>